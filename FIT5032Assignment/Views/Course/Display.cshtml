@using PagedList;
@using PagedList.Mvc;

@model IPagedList<FIT5032Assignment.Models.Course>

@{
    ViewBag.Title = "Display";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Display", "Course", FormMethod.Get))
{
    <b> Search Option: </b>
    @Html.RadioButton("option", "CourseName") <text>CourseName</text>
    @Html.RadioButton("option", "LanguageName") <text>LanguageName</text>
    @Html.RadioButton("option", "FirstName")<text>Teacher's first name</text> @Html.TextBox("search")
    <input type="submit" name="submit" value="Search" />
}

<h2>Course Information</h2>


<table class="table" border="1">
    <tr>
        <th>
            @Html.ActionLink("CourseName", "Display", new
           {
               sort = ViewBag.SortByCourseName,
               option = Request.QueryString["option"],
               search = Request.QueryString["search"]
           })
        </th>
        <th>
            @Html.ActionLink("LanguageName", "Display", new
           {
               sort = ViewBag.SortByLanguageName,
               option = Request.QueryString["option"],
               search = Request.QueryString["search"]
           })
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().Staff.FirstName)
        </th>
        <th></th>
    </tr>
    @if (Model.Count() == 0)
    {
        <tr>
            <td> Records not found </td>
        </tr>
    }
    else
    {
        foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CourseName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Language.LanguageName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Staff.FirstName)
                </td>
            </tr>
        }
    }

</table>
@Html.PagedListPager(Model, pageNumber => Url.Action("Display", new
{
    pageNumber,
    option = Request.QueryString["option"],
    search = Request.QueryString["search"],
    sort = Request.QueryString["sort"]
}))